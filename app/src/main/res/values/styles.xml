<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Theme.Design.NoActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <!--
        <item name="fontFamily">@font/candara</item>
        -->

        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonStyleWithPadding" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <!--
        <item name="fontFamily">@font/candara</item>
        -->

        <item name="civ_border_color">@color/colorPrimary</item>
        <item name="android:borderlessButtonStyle">@color/colorPrimary</item>

        <item name="android:gravity">center</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:paddingTop">12dp</item>item>
        <item name="android:paddingBottom">12dp</item>item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <dimen name="_8sdp">8dp</dimen>
    <dimen name="icons_width">30dp</dimen>
    <dimen name="icon_hight">30dp</dimen>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/darkGray</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/darkGray</item>
    </style>

    <style name="itemCard" parent="CardView.Light">
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="itemCardWithoutMargin" parent="CardView.Light">
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>>

    <style name="itemCardWithoutMarginRadius" parent="CardView.Light">
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>>

    <declare-styleable name="PasswordChecker">
        <attr name="bauble_round" format="color" />
        <attr name="icon_round" format="color" />
    </declare-styleable>
    <style name="WeekPassword" parent="DefaultScene">
        <item name="bauble_round">#ffcc0000</item>
    </style>
    <style name="StrongPassword" parent="DefaultScene">
        <item name="bauble_round">#ff669900</item>
    </style>
    <style name="MediumPassword" parent="DefaultScene">
        <item name="bauble_round">#ffffbb33</item>
    </style>
    <style name="DefaultScene">
        <item name="bauble_round">#d2d2d2</item>
    </style>

    <style name="DefaultIconColor">
        <item name="icon_round">@color/darkGray</item>
    </style>
    <style name="selectedIcon" parent="DefaultScene">
        <item name="icon_round">@color/colorPrimary</item>
    </style>

    <style name="Theme.UserDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="RatingBar" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">#FFEE00</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:color">@color/hints</item>
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense
        </item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--item RadioButton or CheckBox color-->
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:listChoiceIndicatorMultiple">@color/colorPrimary</item>
        <item name="android:listChoiceIndicatorSingle">@color/colorPrimaryDark</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/lightGray</item>
    </style>

    <style name="SeekBarColor"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="MyButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
    </style>

    <style name="ButtonStyleTextColor">
        <item name="colorPrimary">@color/green</item>
    </style>
</resources>